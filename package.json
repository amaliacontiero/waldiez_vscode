{
    "name": "waldiez-vscode",
    "displayName": "@waldiez/vscode",
    "description": "A Waldiez vscode extension",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.95.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "waldiez",
        "vscode"
    ],
    "license": "MIT",
    "publisher": "waldiez",
    "pricing": "Free",
    "icon": "icons/waldiez.png",
    "activationEvents": [],
    "repository": {
        "type": "git",
        "url": "https://github.com/waldiez/vscode.git"
    },
    "bugs": {
        "url": "https://github.com/waldiez/vscode/issues",
        "email": "development@waldiez.io"
    },
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "waldiez",
                "aliases": [
                    "Waldiez",
                    "waldiez"
                ],
                "extensions": [
                    ".waldiez"
                ],
                "icon": {
                    "light": "./icons/waldiez.svg",
                    "dark": "./icons/waldiez.svg"
                }
            }
        ],
        "customEditors": [
            {
                "viewType": "waldiez.vscode.flow",
                "displayName": "Waldiez Flow",
                "selector": [
                    {
                        "filenamePattern": "*.waldiez"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "build": "vsce package --no-yarn",
        "package": "yarn compile",
        "webpack:common": "webpack --mode production --config webpack.config.ts",
        "watch": "yarn compile --watch",
        "lint": "yarn eslint:check && yarn stylelint:check && yarn prettier:check",
        "format": "yarn prettier:fix && yarn stylelint:fix",
        "forlint": "yarn format && yarn lint",
        "stylelint:fix": "yarn stylelint:check --fix",
        "stylelint:check": "stylelint --cache \"src/**/*.css\"",
        "prettier:check": "prettier --write --list-different src",
        "prettier:fix": "prettier --write src",
        "eslint:check": "eslint --report-unused-disable-directives --max-warnings 0 --cache src",
        "eslint:fix": "yarn eslint:check --fix",
        "compile": "yarn clean && yarn monaco && yarn webpack:common",
        "compile:tests": "tsc -p src/test",
        "clean": "rimraf out dist .stylelintcache .eslintcache",
        "pre-test": "yarn compile && yarn compile:tests",
        "monaco": "node --import=tsx scripts/monaco.ts",
        "test": "yarn pre-test && vscode-test"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-react": "^7.25.9",
        "@stylistic/eslint-plugin": "^2.11.0",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/babel__core": "^7.20.5",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.9.1",
        "@types/react-dom": "^18.3.1",
        "@types/tar-stream": "^3.1.3",
        "@types/vscode": "^1.95.0",
        "@types/vscode-webview": "^1.57.5",
        "@types/webpack-env": "^1.18.5",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@waldiez/react": "^0.1.12",
        "babel-loader": "^9.2.1",
        "css-loader": "^7.1.2",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "mini-css-extract-plugin": "^2.9.2",
        "nanoid": "^5.0.8",
        "prettier": "^3.3.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rimraf": "^6.0.1",
        "style-loader": "^4.0.0",
        "stylelint": "^16.10.0",
        "stylelint-config-recommended": "^14.0.1",
        "stylelint-config-standard": "^36.0.1",
        "stylelint-prettier": "^5.0.2",
        "tar-stream": "^3.1.7",
        "terser-webpack-plugin": "^5.3.10",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.15.0",
        "vsce": "^2.15.0",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4"
    },
    "packageManager": "yarn@4.5.2",
    "prettier": {
        "plugins": [
            "@trivago/prettier-plugin-sort-imports"
        ],
        "trailingComma": "none",
        "arrowParens": "avoid",
        "singleQuote": true,
        "endOfLine": "auto",
        "tabWidth": 4,
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true
    },
    "stylelint": {
        "extends": [
            "stylelint-config-recommended",
            "stylelint-config-standard",
            "stylelint-prettier/recommended"
        ],
        "rules": {
            "property-no-vendor-prefix": null,
            "selector-class-pattern": "^([a-z][A-z\\d]*)(-[A-z\\d]+)*$",
            "selector-no-vendor-prefix": null,
            "value-no-vendor-prefix": null
        }
    }
}
